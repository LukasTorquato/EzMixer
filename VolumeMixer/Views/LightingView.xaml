                        <PathGeometry.Figures>
                            <PathFigureCollection>
                                <PathFigure StartPoint="0,50">
                                    <PathFigure.Segments>
                                        <PathSegmentCollection>
                                            <ArcSegment Size="25,1"
                                                IsLargeArc="True"
                                                SweepDirection="Clockwise"
                                                Point="50,50" />
                                        </PathSegmentCollection>
                                    </PathFigure.Segments>
                                </PathFigure>
                            </PathFigureCollection>
                        </PathGeometry.Figures>
                    </PathGeometry>
                </Path.Data>
            </Path>
        </Canvas>

        <Image Grid.Row="1"
            Grid.Column="2" 
            Source="/Assets/Images/coloredknob.png"
            Height="100" 
            Width="100"/>

        <Canvas Grid.Column="3"
                Grid.Row="1">
            <Path Stroke="Green"
                  Name="Volume4_RGB"
                  Stretch="Fill"
                  Margin="8,40,0,0" 
                  StrokeThickness="8"
                  Height="70" 
                  Width="130">
                <Path.Data>
                    <PathGeometry>
                        <PathGeometry.Figures>
                            <PathFigureCollection>
                                <PathFigure StartPoint="0,50">
                                    <PathFigure.Segments>
                                        <PathSegmentCollection>
                                            <ArcSegment Size="25,1"
                                                IsLargeArc="True"
                                                SweepDirection="Clockwise"
                                                Point="50,50" />
                                        </PathSegmentCollection>
                                    </PathFigure.Segments>
                                </PathFigure>
                            </PathFigureCollection>
                        </PathGeometry.Figures>
                    </PathGeometry>
                </Path.Data>
            </Path>
        </Canvas>

        <Image Grid.Row="1"
            Grid.Column="3" 
            Source="/Assets/Images/coloredknob.png"
            Height="100" 
            Width="100"/>

        <Canvas Grid.Column="4"
                Grid.Row="1">
            <Path Stroke="Green"
                  Name="Volume5_RGB"
                  Stretch="Fill"
                  Margin="8,40,0,0" 
                  StrokeThickness="8"
                  Height="70" 
                  Width="130">
                <Path.Data>
                    <PathGeometry>
                        <PathGeometry.Figures>
                            <PathFigureCollection>
                                <PathFigure StartPoint="0,50">
                                    <PathFigure.Segments>
                                        <PathSegmentCollection>
                                            <ArcSegment Size="25,1"
                                                IsLargeArc="True"
                                                SweepDirection="Clockwise"
                                                Point="50,50" />
                                        </PathSegmentCollection>
                                    </PathFigure.Segments>
                                </PathFigure>
                            </PathFigureCollection>
                        </PathGeometry.Figures>
                    </PathGeometry>
                </Path.Data>
            </Path>
        </Canvas>
        <Image Grid.Row="1"
            Grid.Column="4" 
            Source="/Assets/Images/coloredknob.png"
            Height="100" 
            Width="100"/>

    </Grid>
</UserControl>
